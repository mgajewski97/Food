{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["recipes"],
  "properties": {
    "recipes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "servings"],
        "properties": {
          "id": {"type": "string"},
          "servings": {"type": "number"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
