{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "names", "portions", "ingredients", "steps"],
  "properties": {
    "id": {"type": "string"},
    "names": {
      "type": "object",
      "required": ["pl", "en"],
      "properties": {
        "pl": {"type": "string"},
        "en": {"type": "string"}
      },
      "additionalProperties": false
    },
    "portions": {"type": "number"},
    "time": {"type": "string"},
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["productId", "qty", "unitId", "optional"],
        "properties": {
          "productId": {"type": ["string", "null"]},
          "qty": {"type": ["number", "null"]},
          "unitId": {"type": ["string", "null"]},
          "optional": {"type": "boolean"},
          "note": {"type": "string"},
          "unresolved": {"type": "boolean"}
        },
        "additionalProperties": false
      }
    },
    "steps": {
      "type": "array",
      "items": {"type": "string"}
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "additionalProperties": false
}
