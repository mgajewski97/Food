{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^storage\\..+$": {
      "type": "object",
      "patternProperties": {
        "^category\\..+$": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "quantity", "unit", "threshold", "main", "is_spice"],
            "properties": {
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "unit": { "type": "string" },
              "threshold": { "type": "number" },
              "main": { "type": "boolean" },
              "level": { "type": ["string", "null"], "enum": ["none", "low", "medium", "high", null] },
              "is_spice": { "type": "boolean" },
              "tags": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
